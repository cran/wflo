citHeader("To cite wflo in publications, please use:")

citEntry(entry = "Article",
  title        = "{wflo}: {A} New Standard for Wind Farm Layout Optimization in {R}",
  author       = c(person("Carsten", "Croonenbroeck"), person("David", "Hennecke")),
  journal      = "Journal of Statistical Software",
  year         = "2020",
  volume       = "XX",
  number       = "XX",
  pages        = "XX--XX",
  url          = "http://www.jstatsoft.org/",

  textVersion  =
  paste("Croonenbroeck, Carsten & Hennecke, David (2020).",
        "wflo: A New Standard for Wind Farm Layout Optimization in R.",
        "Journal of Statistical Software, XX(XX), XX-XX.")
)
